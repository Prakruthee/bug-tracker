<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title">Log In</h4>
    </div>

    <%= form_tag sessions_path , :class =>"form-horizontal", :id =>"sign_in", :method=> :post, authenticity_token: true  do |f| %>

    <div class="modal-body">

      <form class="form-horizontal">

        <div class="form-group">
          <label for="inputUsername" class="col-sm-3 control-label">Username</label>
          <div class="col-sm-7">
            <%= text_field_tag :username,nil, :class =>"form-control",:id =>"inputUsername", :placeholder => "Username" %>
          </div>
          <div class="col-sm-2"></div>
        </div>

        <div class="form-group">
          <label for="inputPassword" class="col-sm-3 control-label">Password</label>
          <div class="col-sm-7">
            <%= password_field_tag :password,nil, :class =>"form-control",:id =>"inputPassword",:placeholder => "Password" %>
          </div>
          <div class="col-sm-2"></div>
        </div>
      </div>

      <div class="modal-footer">
        <%= submit_tag "Submit", :class =>"btn btn-primary ok-btn-padding" %>
        <button type="button" class="btn btn-default ok-btn-padding" data-dismiss="modal">Cancel</button>
        <br></br>
        <center>

          <!-- facebook log in Button trigger modal -->
          <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>

        </center>
      </div>

      <% end %>
    </div>
  </div>
</div>