<div class="event-panels">
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
        <div class="event-title"><%= issue.issue_name.titleize%></div>
        <%if issue.user.present?%>
          <div class="organiser">
            <%=issue.user.name%>
          </div>
        <%end%>
        <div class="participants"><a href="#">Comments</a> <span class="status"><%= issue.status%></span></div>
    </div>
  </div>
</div>


