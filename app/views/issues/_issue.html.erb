<div class="panel panel-default">
  <div class="panel-heading">
    <%= @issue.issue_name %>
    <span class="pull-right"><%= @issue.status %></span>
  </div>
  <div class="panel-body">
    <p><b>Type: </b><%= @issue.issue_type %></p>
    <h4>Description</h3>
    <p><%= @issue.description %></p>
    <p><b>Comment: </b><%= @issue.comment %></p>

    <% if @issue.user_id == current_user.id %>
      <%= button_to "Edit", edit_issue_path(@issue) ,:method=> :get, remote: true, :class=>"btn btn-primary", 'data-toggle' => 'modal', 'data-target'=>'#myCreate'%>
    <% end %>
  </div>
</div>

